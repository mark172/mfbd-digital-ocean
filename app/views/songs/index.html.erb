<p id="notice"><%= notice %></p>

<div class="container">
  <h1 class="text-center galleryHeader">SONGS WE PLAY</h1>
    <div class="jumbotron">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Title</th>
                <th>Artist</th>
                  <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @songs.each do |song| %>
                <tr>
                  <td><%= song.title %></td>
                  <td><%= song.artist %></td>
                    <td><%= link_to 'Edit', edit_song_path(song), class: "btn btn-success" %></td>
                    <td><%= link_to 'Delete', song, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
</div>