
<div class="container">
  <h1 class="text-center galleryHeader">SONGS WE PLAY</h1>
    <div class="jumbotron">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Title</th>
                <th>Artist</th>
                <% if current_admin %>
                  <th colspan="3"></th>
                  <% end %>
              </tr>
            </thead>

            <tbody>
              <% @songs.each do |song| %>
                <tr>
                  <td><%= song.title %></td>
                  <td><%= song.artist %></td>
                    <% if current_admin %>
                      <td><%= link_to 'Edit', edit_song_path(song), class: "btn btn-success" %></td>
                      <td><%= link_to 'Delete', song, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
                    <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
          <% if current_admin %>
          <div class="row">
            <div class="col-md-4">
              <%= link_to 'New Song', new_song_path, class: "btn btn-primary" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
</div>